<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView style="@style/TextAppearance.MaterialComponents.Headline4"
                android:id="@+id/frag_main_hardware_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"
                android:text="Hardware"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="Bluetooth"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_hardware_bluetooth_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_hardware_header"
                android:layout_margin="16dp"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="GATT Explorer"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_hardware_gatt_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_hardware_bluetooth_btn"
                android:layout_margin="16dp"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="Indigo Goya Spectrometer"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_hardware_indigo_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_hardware_gatt_btn"
                android:layout_margin="16dp"/>

            <TextView style="@style/TextAppearance.MaterialComponents.Headline4"
                android:id="@+id/frag_main_intent_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_hardware_indigo_btn"
                android:layout_margin="16dp"
                android:text="Intents"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="Share File"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_intent_share_file_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_intent_header"
                android:layout_margin="16dp"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="Share File Chooser"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_intent_share_file_chooser_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_intent_share_file_btn"
                android:layout_margin="16dp"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="Test System Location Providers"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_intent_location_provider_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_intent_share_file_chooser_btn"
                android:layout_margin="16dp"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="Test System Bluetooth"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_intent_bluetooth_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_intent_location_provider_btn"
                android:layout_margin="16dp"/>

            <TextView style="@style/TextAppearance.MaterialComponents.Headline4"
                android:id="@+id/frag_main_tts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_intent_bluetooth_btn"
                android:layout_margin="16dp"
                android:text="Text To Speech"/>

            <Button style="@style/Platform.MaterialComponents.Light"
                android:text="TTS Test"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frag_main_tts_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_main_tts"
                android:layout_margin="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>