<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dialog_neutral_button_edit_text_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/dialog_neutral_button_edit_text_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="text" />

    <Button android:background="@android:color/transparent"
        android:id="@+id/dialog_neutral_button_edit_text_neutral_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:text="Neutral"
        android:text="@string/neutral"
        app:layout_constraintTop_toBottomOf="@id/dialog_neutral_button_edit_text_et"
        app:layout_constraintEnd_toStartOf="@id/dialog_neutral_button_edit_text_negative_btn"/>

    <Button android:background="@android:color/transparent"
        android:id="@+id/dialog_neutral_button_edit_text_negative_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:text="@android:string/cancel"
        android:text="@android:string/cancel"
        app:layout_constraintTop_toBottomOf="@id/dialog_neutral_button_edit_text_et"
        app:layout_constraintEnd_toStartOf="@id/dialog_neutral_button_edit_text_positive_btn"/>

    <Button android:background="@android:color/transparent"
        android:id="@+id/dialog_neutral_button_edit_text_positive_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:text="@android:string/ok"
        android:text="@android:string/ok"
        app:layout_constraintTop_toBottomOf="@id/dialog_neutral_button_edit_text_et"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>