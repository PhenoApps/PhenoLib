<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:background="@drawable/cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="Characteristic UUID"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:id="@+id/list_item_char_uuid_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="8dp"/>

    <TextView
        tools:text="Characteristic Value"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:id="@+id/list_item_char_value_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_char_uuid_tv"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:visibility="gone"
        android:text="Readable"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:id="@+id/list_item_char_readable_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_char_value_tv"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:visibility="gone"
        android:text="Writable"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:id="@+id/list_item_char_writable_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_char_readable_tv"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:visibility="gone"
        android:text="Write No Response"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:id="@+id/list_item_char_write_no_response_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_char_writable_tv"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:visibility="gone"
        android:text="Notifiable"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:id="@+id/list_item_char_notifiable_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_char_write_no_response_tv"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:visibility="gone"
        android:text="Indicatable"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:id="@+id/list_item_char_indicatable_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_char_notifiable_tv"
        android:layout_marginVertical="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>